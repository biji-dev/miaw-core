{
  "name": "miaw-core",
  "version": "1.1.0",
  "description": "Simplified WhatsApp API wrapper for Baileys - Multiple Instance of App WhatsApp",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:manual": "tsx tests/interactive-test.ts",
    "test:manual:build": "npm run build && node dist/tests/interactive-test.js"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "whatsapp-api",
    "whatsapp-bot",
    "multi-instance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "pino": "^8.19.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/qrcode-terminal": "^0.12.2",
    "babel-jest": "^30.2.0",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
