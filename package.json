{
  "name": "miaw-core",
  "version": "1.2.1",
  "description": "Simplified WhatsApp API wrapper for Baileys - Multiple Instance of Awesome WhatsApp",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "miaw-cli": "./bin/miaw-cli.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src tests examples bin",
    "lint:fix": "eslint src tests examples bin --fix",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:manual": "tsx tests/interactive-test.ts",
    "test:manual:build": "npm run build && node dist/tests/interactive-test.js",
    "cli": "tsx bin/miaw-cli.ts"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "whatsapp-api",
    "whatsapp-bot",
    "multi-instance"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biji-dev/miaw-core.git"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "cli-table3": "^0.6.5",
    "pino": "^8.19.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "babel-jest": "^30.2.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
