    "types": ["jest", "node"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist-test",
    "rootDir": "./",
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["tests/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
